                            android:layout_marginLeft="@dimen/input_padding"
                            android:background="@drawable/login_input"
                            android:hint="@string/hint_post_grad_univ_college"
                            android:padding="@dimen/padding_10" />

                        <EditText
                            android:id="@+id/editPostGradYear"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/padding_10"
                            android:layout_marginLeft="@dimen/input_padding"
                            android:background="@drawable/login_input"
                            android:hint="@string/hint_post_grad_completion_year"
                            android:inputType="number"
                            android:padding="@dimen/padding_10" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linear4"
                android:layout_marginBottom="@dimen/padding_10"
                android:layout_marginTop="@dimen/padding_10"
                android:background="@drawable/login_input"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tViewEmploy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/padding_10"
                    android:clickable="true"
                    android:drawableRight="@drawable/circle_plus"
                    android:onClick="toggle_employment"
                    android:padding="@dimen/input_padding"
                    android:text="@string/employment_status"
                    android:textAlignment="center"
                    android:textSize="@dimen/text_size" />

                <LinearLayout
                    android:id="@+id/linearEmploymentStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/input_padding"
                        android:text="@string/are_you_employed_or_unemployed"
                        android:textSize="@dimen/check_box_question" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioGroup
                            android:id="@+id/RgEmployment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checkedButton="@+id/RbAadharno"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/RbEmploymentyes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Yes" />

                            <RadioButton
                                android:id="@+id/RbEmploymentno"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="No" />
                        </RadioGroup>
                    </LinearLayout>

                    <EditText
                        android:id="@+id/editEmpCompany"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/padding_10"
                        android:layout_marginLeft="@dimen/input_padding"
                        android:background="@drawable/login_input"
                        android:hint="@string/hint_emp_company"
                        android:inputType="textCapSentences"
                        android:padding="@dimen/padding_10" />

                    <EditText
                        android:id="@+id/editEmpCompanyAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/padding_10"
                        android:layout_marginLeft="@dimen/input_padding"
                        android:background="@drawable/login_input"
                        android:hint="@string/hint_emp_company_address"
                        android:padding="@dimen/padding_10" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
